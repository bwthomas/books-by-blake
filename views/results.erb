<h1>Books, Y'all!</h1>

<form action="/search">
  <input id="search" name="search" class="form-control" type="text">
  <button type="submit">Go Get It!</button>
</form>

<div class="results">
  <% @results.each do |result| %>
  <div class="result">
    <div class="thumb">
      <a href="<%= result[:link]  %>"> <img src="<%= result[:thumb] %>" alt="<%= result[:title] + ' by ' + result[:authors] %>"> </a>
    </div>
    <div class="info">
      <%= result[:title] + ' by ' + result[:authors] %> (<%= result[:publisher] %>)
    </div>
  </div>
  <% end %>
</div>
